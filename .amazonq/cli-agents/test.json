{
  "name": "oapilot-test",
  "description": "OAPilot Test Configuration with simple MCP server",
  "mcpServers": {
    "test-server": {
      "command": "node",
      "args": ["test-mcp-server.js"],
      "timeout": 30000,
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "tools": [
    "@test-server"
  ],
  "allowedTools": [
    "@test-server/echo",
    "@test-server/get_time"
  ],
  "settings": {
    "maxConnections": 1,
    "initTimeout": 30000,
    "requestTimeout": 10000,
    "retryAttempts": 2
  }
}